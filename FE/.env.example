# ======= App URLs =======
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
NEXTAUTH_URL=http://localhost:3000

# ======= Auth Secrets =======
NEXTAUTH_SECRET=your_nextauth_secret_here
REVALIDATE_SECRET=your_revalidate_secret_here

# ======= OAuth Providers =======

# Google
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub
GITHUB_ID=your_github_client_id_here
GITHUB_SECRET=your_github_client_secret_here

# Facebook (optional)
FACEBOOK_ID=your_facebook_app_id_here
FACEBOOK_SECRET=your_facebook_app_secret_here

# Twitter (optional)
TWITTER_ID=your_twitter_app_id_here
TWITTER_SECRET=your_twitter_app_secret_here

# Auth0 (optional)
AUTH0_ID=your_auth0_client_id_here
AUTH0_SECRET=your_auth0_client_secret_here
AUTH0_ISSUER=https://your-auth0-domain/


